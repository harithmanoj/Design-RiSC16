{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "compile",
            "type": "shell",
            "command": "iverilog -I $PWD/single/ -o $PWD/single/tb/out/${fileBasenameNoExtension}.o -s ${fileBasenameNoExtension} $PWD/single/tb/${fileBasename}"
        },
        {
            "label": "sim",
            "type": "shell",
            "command": "vvp $PWD/single/tb/out/${fileBasenameNoExtension}.o"
        },
        {
            "label": "repos",
            "type": "shell",
            "command": "del single/tb/out/${fileBasenameNoExtension}.vcd ; move ${fileBasenameNoExtension}.vcd single/tb/out"
        },
        {
            "label": "display",
            "type": "shell",
            "command": "gtkwave $PWD/single/tb/out/${fileBasenameNoExtension}.vcd"
        },
        {
            "label": "exec",
            "dependsOn": [
                "compile",
                "sim",
                "repos",
                "display"
            ],
            "dependsOrder": "sequence",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}